@model Practico3AJAX.Models.Herramienta

@{
    ViewData["Title"] = "Eliminar Herramienta";
}

<h1 class="text-center mb-4">Eliminar Herramienta</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-16">
            <div class="bg-light p-4 rounded shadow">
                <h4 class="text-center text-danger">¿Estás seguro de que deseas eliminar esta herramienta?</h4>
                <hr />
                <dl class="row mb-4">
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Modelo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Modelo)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Marca)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Marca)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.CantidadTotal)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CantidadTotal)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Disponibles)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Disponibles)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
