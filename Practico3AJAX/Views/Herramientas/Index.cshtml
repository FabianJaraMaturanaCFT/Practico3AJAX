@model IEnumerable<Practico3AJAX.Models.Herramienta>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Lista de Herramientas</h1>

<p>
    <a class="btn btn-success mb-3" asp-action="Create">
        <i class="fas fa-plus"></i> Crear Nueva Herramienta
    </a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Modelo)</th>
            <th>@Html.DisplayNameFor(model => model.Marca)</th>
            <th>@Html.DisplayNameFor(model => model.CantidadTotal)</th>
            <th>@Html.DisplayNameFor(model => model.Disponibles)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.CantidadTotal)</td>
                <td>@Html.DisplayFor(modelItem => item.Disponibles)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Detalles">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Incluir FontAwesome y Bootstrap para los iconos y estilos si no están incluidos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
