@model IEnumerable<Practico3AJAX.Models.UnidadHerramienta>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Listado de Herramientas</h1>

<p>
    <a class="btn btn-success mb-3" asp-action="Create">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NumeroSerie)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Herramienta)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NumeroSerie)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Herramienta.Marca)</td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Details">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

