@model Practico3AJAX.Models.UnidadHerramienta

@{
    ViewData["Title"] = "Crear Unidad de Herramienta";
}

<h1 class="text-center mb-4">Crear Unidad de Herramienta</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-16">
            <!-- Cambié el tamaño de la columna a 8 -->
            <form asp-action="Create" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="NumeroSerie" class="form-label"></label>
                    <input asp-for="NumeroSerie" class="form-control" />
                    <span asp-validation-for="NumeroSerie" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HerramientaId" class="form-label"></label>
                    <select asp-for="HerramientaId" class="form-control" asp-items="ViewBag.HerramientaId"></select>
                    <span asp-validation-for="HerramientaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear Unidad" class="btn btn-success w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
