@{
    ViewData["Title"] = "Home Page";
}

<!-- Página de inicio con un diseño moderno y fondo degradado -->
<div class="container-fluid text-center vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #a8e6cf 0%, #dcedc1 100%);">
    <!-- Fondo degradado verde claro -->
    <div class="overlay" style="background-color: rgba(255, 255, 255, 0.8); padding: 50px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);">
        <!-- Fondo del overlay más claro y con sombra -->
        <h1 class="display-2 text-dark font-weight-bold mb-4">Evaluación N°3 Programación Avanzada</h1> <!-- Cambiado el color del texto a oscuro para mejor contraste -->
        <p class="lead text-dark mb-5">Desarrolla aplicaciones modernas con <strong>ASP.NET Core</strong> y aprende todo sobre ello en nuestra guía completa.</p> <!-- Cambiado el color del texto a oscuro para mejor contraste -->

        <a href="https://docs.microsoft.com/aspnet/core" class="btn btn-lg btn-success px-5 py-3">
            <!-- Cambiado el botón a un color verde -->
            <i class="fas fa-book"></i> Learn More
        </a>
    </div>
</div>

<!-- Añadir dependencias de FontAwesome y Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
