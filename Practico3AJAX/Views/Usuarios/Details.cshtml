@model Practico3AJAX.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h1 class="text-center mb-4">Detalles de Usuario</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-light p-4 rounded shadow">
                <h4 class="text-center">Información del Usuario</h4>
                <hr />
                <dl class="row mb-4">
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                </dl>

                <div class="text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
