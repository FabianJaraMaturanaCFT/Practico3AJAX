@model Practico3AJAX.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1 class="text-center mb-4">Eliminar Usuario</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-light p-4 rounded shadow">
                <h4 class="text-center text-danger">¿Estás seguro de que deseas eliminar este usuario?</h4>
                <hr />
                <dl class="row mb-4">
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
