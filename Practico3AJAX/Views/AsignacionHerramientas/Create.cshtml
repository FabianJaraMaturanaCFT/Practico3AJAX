@model Practico3AJAX.Models.AsignacionHerramienta

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Crear Asignación de Herramienta</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-16">
            <form asp-action="Create" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="UnidadHerramientaId" class="form-label"></label>
                    <select asp-for="UnidadHerramientaId" class="form-select" asp-items="ViewBag.UnidadHerramientaId">
                        <option value="">Seleccione una unidad de herramienta</option> <!-- Opcional: opción por defecto -->
                    </select>
                    <span asp-validation-for="UnidadHerramientaId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UsuarioId" class="form-label"></label>
                    <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId">
                        <option value="">Seleccione un usuario</option> <!-- Opcional: opción por defecto -->
                    </select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaAsignacion" class="form-label"></label>
                    <input asp-for="FechaAsignacion" class="form-control" type="date" />
                    <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="FechaDevolucion" class="form-label"></label>
                    <input asp-for="FechaDevolucion" class="form-control" type="date" />
                    <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-success w-100" /> <!-- Botón de éxito -->
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
