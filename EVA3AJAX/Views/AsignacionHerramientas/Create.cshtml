@model EVA3AJAX.Models.AsignacionHerramienta
@{
    ViewData["Title"] = "Crear";
}
<h1 class="text-primary">Crear Nueva Asignación</h1>
<h4>Detalles de la Asignación</h4>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="UnidadHerramientaId" class="control-label">Unidad de Herramienta</label>
                <select asp-for="UnidadHerramientaId" class="form-control" asp-items="ViewBag.UnidadHerramientas"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaAsignacion" class="control-label">Fecha de Asignación</label>
                <input asp-for="FechaAsignacion" class="form-control" />
                <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

