@model EVA3AJAX.Models.AsignacionHerramienta
@{
    ViewData["Title"] = "Eliminar";
}
<h1 class="text-danger">Eliminar Asignación</h1>
<h3>¿Estás seguro de que deseas eliminar esta asignación?</h3>
<div class="card mb-4">
    <div class="card-body">
        <h4>Detalles de la Asignación de Herramienta</h4>
        <hr />
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <dl class="row">
            <dt class="col-sm-2">Unidad de Herramienta</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UnidadHerramientaId)</dd>
            <dt class="col-sm-2">ID de Usuario</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UsuarioId)</dd>
            <dt class="col-sm-2">Fecha de Asignación</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaAsignacion)</dd>
            <dt class="col-sm-2">Fecha de Retorno</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaRetorno)</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</form>
<form asp-action="Devolver" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Devolver Herramienta</button>
</form>



