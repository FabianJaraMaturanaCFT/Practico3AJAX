@model EVA3AJAX.Models.Herramienta
@{
    ViewData["Title"] = "Crear";
}
<h1 class="text-primary">Crear Nueva Herramienta</h1>
<h4>Detalles de la Herramienta</h4>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Modelo" class="control-label">Modelo</label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdMarca" class="control-label">Marca</label>
                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.Marcas"></select>
                <span asp-validation-for="IdMarca" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CantidadTotal" class="control-label">Cantidad Total</label>
                <input asp-for="CantidadTotal" class="form-control" />
                <span asp-validation-for="CantidadTotal" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Disponibles" class="control-label">Disponibles</label>
                <input asp-for="Disponibles" class="form-control" />
                <span asp-validation-for="Disponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

