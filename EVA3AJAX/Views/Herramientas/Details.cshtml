@model EVA3AJAX.Models.Herramienta
@{
    ViewData["Title"] = "Detalles";
}
<h1>Detalles de la Herramienta</h1>
<div>
    <h4>Herramienta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdMarca)
        </dd>
        <dt class="col-sm-2">
            Cantidad Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadTotal)
        </dd>
        <dt class="col-sm-2">
            Disponibles
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disponibles)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
